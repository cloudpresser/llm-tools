{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/shared-utils",
    "rootDir": "./src"
  },
  "include": ["src/**/*"]
}
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist"
  ]
}
